<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="csrf-token" content={get_csrf_token()} />
    <meta name="description" content="Spotlight Homeschool Community Theater - Free, faith-based, family-friendly theater productions in West Michigan." />
    <.live_title default="Spotlight Theater" suffix=" Â· West Michigan">
      {assigns[:page_title]}
    </.live_title>
    <link phx-track-static rel="stylesheet" href={~p"/assets/css/app.css"} />
    <script defer phx-track-static type="text/javascript" src={~p"/assets/js/app.js"}>
    </script>
  </head>
  <body class="bg-[#F5EED6] min-h-screen flex flex-col">
    <!-- Navigation Header -->
    <header class="bg-[#1C3A47] text-[#F5EED6]">
      <nav class="container mx-auto px-4 py-4">
        <div class="flex flex-col md:flex-row md:items-center md:justify-between">
          <div class="flex items-center justify-between">
            <a href="/" class="flex items-center gap-3">
              <img src="/images/logo.png" alt="Spotlight Theater" class="h-12 rounded" />
              <span class="text-xl font-bold hidden sm:inline">Spotlight Theater</span>
            </a>
            <!-- Mobile menu button -->
            <button id="mobile-menu-btn" class="md:hidden p-2 rounded hover:bg-[#F5EED6]/10" aria-label="Toggle menu">
              <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
              </svg>
            </button>
          </div>
          <ul id="nav-menu" class="hidden md:flex flex-col md:flex-row md:items-center gap-1 md:gap-6 mt-4 md:mt-0">
            <li><a href="/" class="block py-2 md:py-0 hover:text-[#D4A574] transition">Home</a></li>
            <li><a href="/about" class="block py-2 md:py-0 hover:text-[#D4A574] transition">About</a></li>
            <li><a href="/productions" class="block py-2 md:py-0 hover:text-[#D4A574] transition">Productions</a></li>
            <li><a href="/golden-quill" class="block py-2 md:py-0 hover:text-[#D4A574] transition">Golden Quill</a></li>
            <li><a href="/contact" class="block py-2 md:py-0 hover:text-[#D4A574] transition">Contact</a></li>
          </ul>
        </div>
      </nav>
    </header>

    <!-- Main Content -->
    <main class="flex-1">
      {@inner_content}
    </main>

    <!-- Footer -->
    <footer class="bg-[#1C3A47] text-[#F5EED6] py-8">
      <div class="container mx-auto px-4">
        <div class="grid md:grid-cols-3 gap-8">
          <!-- About -->
          <div>
            <h3 class="text-lg font-bold mb-4 text-[#D4A574]">Spotlight Theater</h3>
            <p class="text-sm opacity-80">
              A non-profit homeschool community theater bringing faith-based, family-friendly entertainment to West Michigan.
            </p>
          </div>
          <!-- Contact -->
          <div>
            <h3 class="text-lg font-bold mb-4 text-[#D4A574]">Contact Us</h3>
            <ul class="space-y-2 text-sm opacity-80">
              <li>
                <a href="tel:7853412424" class="hover:text-[#D4A574] transition">(785) 341-2424</a>
              </li>
              <li>
                <a href="mailto:spotlightwm@outlook.com" class="hover:text-[#D4A574] transition">spotlightwm@outlook.com</a>
              </li>
              <li>The Corner Theater</li>
              <li>280 W. Muskegon Ave, Muskegon, MI</li>
            </ul>
          </div>
          <!-- Social -->
          <div>
            <h3 class="text-lg font-bold mb-4 text-[#D4A574]">Follow Us</h3>
            <div class="flex gap-4">
              <a href="https://facebook.com/SpotlightHSCTheater/" target="_blank" rel="noopener" class="hover:text-[#D4A574] transition" aria-label="Facebook">
                <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
                </svg>
              </a>
              <a href="https://instagram.com/spotlighttheater_wm" target="_blank" rel="noopener" class="hover:text-[#D4A574] transition" aria-label="Instagram">
                <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
                </svg>
              </a>
            </div>
          </div>
        </div>
        <div class="border-t border-[#F5EED6]/20 mt-8 pt-6 text-center text-sm opacity-60">
          <p>&copy; {Date.utc_today().year} Spotlight Homeschool Community Theater. All performances are FREE.</p>
        </div>
      </div>
    </footer>

    <!-- Mobile menu toggle script -->
    <script>
      document.getElementById('mobile-menu-btn').addEventListener('click', function() {
        const menu = document.getElementById('nav-menu');
        menu.classList.toggle('hidden');
      });
    </script>
  </body>
</html>
